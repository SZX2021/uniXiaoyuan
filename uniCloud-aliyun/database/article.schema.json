// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": [],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "文章ID，系统自动生成"
		},
		"content": {
			"bsonType": "string",
			"description": "文章内容"
		},
		"images": {
			"bsonType": "array",
			"arrayType": "string"
		},
		"author_id": {
			"bsonType": "object",
			"description": "发布者",
			"foreignKey": "user._id"
		},
		"category": {
			"bsonType": "string",
			"description": "文章分类"
		},
		"nimingFlag": {
			"bsonType": "bool"
		},
		"time": {
			"description": "发布时间"
		},
		"view_num": {
			"bsonType": "int",
			"description": "浏览数量",
			"defaultValue": 0
		},
		"like_num": {
			"bsonType": "int",
			"description": "点赞数量",
			"defaultValue": 0
		},
		"comment_num": {
			"bsonType": "int",
			"description": "评论数量",
			"defaultValue": 0
		}
		
	}
}