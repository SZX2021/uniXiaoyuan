
.container {
	display: flex;
	flex-direction: column;
	align-items: center;
}
.card {
	width: 90%;
	border-radius: 20rpx;
	background-color: #f8f8f8;
	padding: 30rpx;
	display: flex;
	flex-direction: column;
	margin-top: 40rpx;
}
.text {
	align-self: center;
	font-size: 24rpx;
	width: 100%;
}
.tags {
	display: flex;
	margin-top: 20rpx;
}
.tag {
	margin-right: 20rpx;
}
.line {
	width: 100%;
	height: 1px;
	background-color: #808080;
	margin: 40rpx 0 20rpx;
}
.niming {
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.button {
	border-radius: 50rpx;
	width: 90%;
	font-weight: bold;
	background-color: #FCC53A;
}

