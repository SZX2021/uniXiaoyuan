
.article-list {
	display: flex;
	flex-direction: column;
	align-items: center;
	width: 100vw;
}
.article-list-card {
	width: 90%;
	border-radius: 20rpx;
	background-color: white;
	padding: 30rpx;
	display: flex;
	flex-direction: column;
	margin-top: 40rpx;
}
.article-list-card-head {
	display: flex;
	align-self: flex-start;
	margin-bottom: 40rpx;
}

/* 作者信息 */
.author_info {
	width: 300rpx;
	display: flex;
	align-items: center;
	margin-bottom: 5px;
	padding: 0;
}
.item-category {
	margin-left: 10px;
	font-size: 14px;
	color: rgb(193, 193, 193);
}
.article-list-card-content {
	width: 100%;
	margin-bottom: 30rpx;
	/* margin-left: 10px; */
}
.article-list-card-data {
	display: flex;
	justify-content: space-between;
	width: 100%;
}
.article-list-card-data-left {
	font-size: 22rpx;
	display: flex;
	align-items: center;
}
.article-list-card-data-right {
	weight: 100rpx;
	display: flex;
	align-items: center;
}

