<view class="user-info-container"><button class="avatar-wrapper" open-type="chooseAvatar" data-event-opts="{{[['chooseavatar',[['onChooseAvatar',['$event']]]]]}}" bindchooseavatar="__e"><image class="avatar" src="{{avatarUrl}}"></image></button><form data-ref="form" data-event-opts="{{[['submit',[['formSubmit',['$event']]]]]}}" class="info-card vue-ref" bindsubmit="__e"><view class="form-item"><text class="title">姓名：</text><input class="weui-input input" name="userName" placeholder="请输入昵称" type="text" required="{{true}}" data-event-opts="{{[['input',[['__set_model',['$0','user_name','$event',[]],['userInfo']]]]]}}" value="{{userInfo.user_name}}" bindinput="__e"/><block wx:if="{{!userNameValid}}"><label class="error _span">请输入有效的姓名</label></block></view><view class="form-item"><text class="title">性别：</text><radio-group class="radio-group" name="radio" data-event-opts="{{[['change',[['radioChange',['$event']]]]]}}" bindchange="__e"><label class="radio"><radio value="男" checked="{{userInfo.user_gender==='男'?true:false}}"></radio><text>男</text></label><label class="radio"><radio value="女" checked="{{userInfo.user_gender==='女'?true:false}}"></radio><text>女</text></label></radio-group></view><view class="form-item"><text class="title">手机：</text><input class="input" name="phoneNumber" type="tel" placeholder="请输入手机号" required="{{true}}" pattern="\d{11}" data-event-opts="{{[['input',[['__set_model',['$0','user_phoneNumber','$event',[]],['userInfo']]]]]}}" value="{{userInfo.user_phoneNumber}}" bindinput="__e"/><block wx:if="{{!phoneNumberValid}}"><label class="error _span">请输入有效的手机号</label></block></view><view class="form-item"><text class="title">签名：</text><textarea class="textarea" name="signature" placeholder="请输入个性签名" data-event-opts="{{[['input',[['__set_model',['$0','user_signature','$event',[]],['userInfo']]]]]}}" value="{{userInfo.user_signature}}" bindinput="__e"></textarea></view><button class="submit" form-type="submit">保存信息</button></form></view>